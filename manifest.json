{
  "manifest_version": 2,
  "name": "GitHub Narf",
  "version": "0.2",
  "options_page": "src/options.html",
  "options_ui": {
    "page": "src/options-dialog.html",
    "chrome_style": true
  },

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "alarms"
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    }
  },

  "background": {
    "scripts": [
      "src/github.js",
      "src/notifications.js",
      "src/background.js"
    ]
  }
}
